program Project2;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

Const
 n=1000;
Var
 X:array [1..n, 1..n] of integer;
 Y:array [1..n*n] of integer;
 n2:string;
 rab1 : real;
 cod, n1, i, rab2, j: integer;

begin
 rab2:=1;
 cod:=1;
 while rab2<>0 do                 // проверка на размерность массива
 begin
  repeat
   write('¬ведите размерность (не более ',n,') массива N: ');     // проверка длинны строки
   readln(n2);
   if length(n2)>4 then writeln('Error, please try again');
  until length(n2)<=4 ;
  while cod<>0 do           //  проверка дурака если вводишь символы
   begin
    val(n2,rab1,cod);
    if cod<>0 then
    begin
     writeln('Error, please try again');
        repeat
         write('¬ведите размерность (не более ',n,') массива N: ');          // проверка длинны строки  снова
         readln(n2);
         if length(n2)>4 then writeln('Error, please try again');
        until length(n2)<=4 ;
    end;
   end;
  n1:=strtoint(n2);
  if (n1<=0) or (n1>1000) then       //проверка дурака если вводишь число 0<=n>30000
   writeln('Error, please try again')
  else rab2:=0;
 end;

  for i := 1 to n1 do           // ввод эл массива и проверка на ввод
  begin
   for j := 1 to n1 do
   begin
    repeat
    write('¬ведите [',i,', ',j,'] элемент массива: ');
    readln(n2);
    val(n2,rab1,cod);
    if cod<>0 then writeln('Error, please try again');
    until cod=0;
    X[i,j]:=strtoint(n2);
   end;
   end;

  writeln;
  write('¬ведЄнный массив: ');
  for i := 1 to n1 do
   begin
    for j := 1 to n1 do
    begin
    write(X[i,j],' ');
    end;
    writeln;
   end;
end.
